<p>
  <strong>Recipe:</strong>
  <%= @recipe.name %>
</p>

  <strong>prep_time:</strong>
  <%= @recipe.prep_time %>

  <strong>cook_time:</strong>
  <%= @recipe.cook_time %>

  <h2>Ingredients</h2>
<% @recipe.ingredients.each do |ingredient| %>
  <p>
    <strong>Measurement:</strong>
    <%= ingredient.amount %>
    <%= ingredient.measurements %>
  </p>

  <p>
    <strong>Ingredient:</strong>
    <%= ingredient.item %>
  </p>
<% end %>

<h2>Directions</h2>
<% @recipe.steps.each do |step| %>
  <p>
    <strong>Directions:</strong>
    <%= step.description %>
  </p>
<% end %>

<h2>Add a Ingredient:</h2>
<%= form_for([@recipe, @recipe.ingredients.build]) do |f| %>
  <p>
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :measurements %><br>
    <%= f.text_field :measurements %>
  </p>
  <p>
    <%= f.label :item %><br>
    <%= f.text_field :item %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h2>Add a Direction:</h2>
<%= form_for([@recipe, @recipe.steps.build]) do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %>
<%= link_to 'Back', recipes_path %>
